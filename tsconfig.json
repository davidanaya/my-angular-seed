{
  "compilerOptions": {
    "target": "es5",
    "experimentalDecorators": true,
    "declaration": false,
    "sourceMap": false,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}